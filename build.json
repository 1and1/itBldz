{
    "prepare": {
    },
    "compile": {
        "typescript": {
            "task": "ts",
            "package": "grunt-ts",
            "default": {
                "options": {
                    "module": "commonjs",
                    "compile": true,
                    "experimentalDecorators": true
                },
                "src": "<%= config.sources.TypeScript.files %>"
            }
        }
    },
    "test": {
        "typescript": {
            "unit": {
                "task": "mochaTest",
                "package": "grunt-mocha-test",
                "dependencies": [
                    "chai",
                    "sinon"
                ],
                "test": {
                    "src": [
                        "<%= config.sources.TypeScript.tests.unit %>"
                    ]
                }
            },
            "acceptance": {
                "clean-test-results" : {
                    "task": "clean",
                    "package": "grunt-contrib-clean",
                    "options": {
                        "force": true
                    },
                    "target": [
                        "<%= config.directories.TypeScript.acceptance %>/testdata"
                    ]
                },
                "scenarios" : {
                    "task": "cucumberjs",
                    "package": "grunt-cucumber",
                    "src": "<%= config.directories.TypeScript.acceptance %>/BuildScenarios.feature",
                    "dependencies": [
                        "cucumber", "chai"
                    ],
                    "options": "<%= config.test.acceptance.options %>"
                },
                "vars" : {
                    "task": "cucumberjs",
                    "package": "grunt-cucumber",
                    "src": "<%= config.directories.TypeScript.acceptance %>/YamlVars.feature",
                    "dependencies": [
                        "cucumber", "chai"
                    ],
                    "options": "<%= config.test.acceptance.options %>"
                },
                "type-discriminators" : {
                    "task": "cucumberjs",
                    "package": "grunt-cucumber",
                    "src": "<%= config.directories.TypeScript.acceptance %>/TypeDiscriminators.feature",
                    "dependencies": [
                        "cucumber"
                    ],
                    "options": "<%= config.test.acceptance.options %>"
                }, 
                "type-discriminators-functions" : {
                    "task": "cucumberjs",
                    "package": "grunt-cucumber",
                    "src": "<%= config.directories.TypeScript.acceptance %>/TypeDiscriminatorsFunctions.feature",
                    "dependencies": [
                        "cucumber"
                    ],
                    "options": "<%= config.test.acceptance.options %>"
                }, 
                "type-discriminators-modules" : {
                    "task": "cucumberjs",
                    "package": "grunt-cucumber",
                    "src": "<%= config.directories.TypeScript.acceptance %>/TypeDiscriminatorsModules.feature",
                    "dependencies": [
                        "cucumber"
                    ],
                    "options": "<%= config.test.acceptance.options %>"
                }, 
                "running-build" : {
                    "task": "cucumberjs",
                    "package": "grunt-cucumber",
                    "src": "<%= config.directories.TypeScript.acceptance %>/RunningBuild.feature",
                    "dependencies": [
                        "cucumber"
                    ],
                    "options": "<%= config.test.acceptance.options %>"
                },
                "extending-modules" : {
                    "task": "cucumberjs",
                    "package": "grunt-cucumber",
                    "src": "<%= config.directories.TypeScript.acceptance %>/ExtendingModules.feature",
                    "dependencies": [
                        "cucumber"
                    ],
                    "options": "<%= config.test.acceptance.options %>"
                }, 
                "different-configs" : {
                    "task": "cucumberjs",
                    "package": "grunt-cucumber",
                    "src": "<%= config.directories.TypeScript.acceptance %>/UsingDifferentConfiguration.feature",
                    "dependencies": [
                        "cucumber"
                    ],
                    "options": "<%= config.test.acceptance.options %>"
                }
            }
        }
    }
}