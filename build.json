{
    "prepare": {
        "clean": {
            "task": "clean",
            "package": "grunt-contrib-clean",
            "options": { "force": true },
            "target": [ "<%= config.directories.output %>" ]
        },
        "mkdir": {
            "task": "mkdir",
            "package": "grunt-mkdir",
            "all": { "options": { "create": [ "<%= config.directories.output %>" ] } }
        }
    },
    "validate": {
        "syntax": {
            "js": {
                "task": "jsvalidate",
                "package": "grunt-jsvalidate",
                "files": [ "<%= config.filesets.js.sources %>" ],
                "options": "<%= config.validation.syntax.js %>"
            }
        },
        "semantic": {
            "js": {
                "task": "jshint",
                "package": "grunt-contrib-jshint",
                "files": [ "<%= config.filesets.js.sources %>" ],
                "options": "<%= config.validation.semantic.js %>"
            }
        }
    },
    "test": {
        "coverage": {
            "js": {
                "task": "mocha_istanbul",
                "package": "grunt-mocha-istanbul",
                "mocha": {
                    "src": "<%= config.filesets.js.tests %>",
                    "options": {
                        "coverageFolder": "<%= config.directories.output %>/coverage/js/",
                        "check": {
                            "lines": 80,
                            "statements": 80,
                            "branches": 80,
                            "functions": 80
                        }
                    }
                }
            }
        }
    },
    "create-deployable": {
        "copy": {
            "task": "copy",
            "package": "grunt-contrib-copy",
            "js": "<%= config.deployable.js %>",
            "shell": "<%= config.deployable.shell %>",
            "json": "<%= config.deployable.json %>"
        }
    }
}
