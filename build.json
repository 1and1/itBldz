{
    "prepare": {},
    "compile": {
        "typescript": {
            "task": "ts",
            "package": "grunt-ts",
            "default": {
                "options": {
                    "module": "commonjs",
                    "compile": true
                },
                "src": "<%= config.sources.TypeScript.files %>"
            }
        }
    },
    "test": {
        "typescript": {
            "unit": {
                "task": "mochaTest",
                "package": "grunt-mocha-test",
                "dependencies": [
                    "chai",
                    "sinon"
                ],
                "test": {
                    "src": [
                        "<%= config.sources.TypeScript.tests.unit %>"
                    ]
                }
            },
            "acceptance": {
                "task": "cucumberjs",
                "package": "grunt-cucumber",
                "src": "<%= config.directories.TypeScript.acceptance %>",
                "dependencies": [
                    "cucumber"
                ],
                "options": {
                    "steps": "<%= config.directories.TypeScript.acceptance %>",
                    "modulePath": "<%= config.directories.root %>/node_modules/cucumber/lib/cucumber.js",
                    "format": "pretty"
                }
            }
        }
    }
}